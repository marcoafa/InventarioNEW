                                            <td>@item.Brand.Name</td>
                                            <td>@item.Model</td>
                                            <td>@item.NameEquip</td>
                                            @if (item.AreaID == null)
                                            {
                                                <td>Sin Asignar</td>}
                                            else
                                            {
                                                <td>@item.Area.Name</td>
                                            }
                                            <td>@item.CriticEquip</td>

                                            @if (item.DateWarranty != null && item.DateWarranty < DateTime.Now)
                                            {
                                            <td>Vencida</td>
                                            }
                                            else
                                            {
                                                if (item.DateWarranty != null && item.DateWarranty > DateTime.Now)
                                                {

                                                    var dias = (item.DateWarranty.Value - DateTime.Now).Days ;
                                                    if (dias >= 100)
                                                    {<td>Activa (@dias días)</td>}
                                                    else
                                                    {<td>Por Vencer (@dias días)</td>}

                                                }
                                                else
                                                {
                                                      <td>Sin Garantia</td>
                                                 }
                                            }
                                            <td>
