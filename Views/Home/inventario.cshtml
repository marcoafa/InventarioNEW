                                            {


                                                if (item.TypeHardware.Description != "Desktop" && item.TypeHardware.Description != "Laptop" && item.TypeHardware.Description != "Touch" && item.SerialAssigned == null)
                                                {
                                                    <tr>
                                                        <td data-sortable="true" class="text-center">@item.TypeHardware.Description</td>
                                                        <td data-sortable="true" class="text-center">@item.Brand.Name</td>
